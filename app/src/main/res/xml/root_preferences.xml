<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/saved_artists">

        <Preference
            app:key="clearHistory"
            app:summary="@string/delete_all_artists"
            app:title="@string/clear_history" />

        <SwitchPreference
            app:defaultValue="true"
            app:key="keepArtists"
            app:title="@string/keep_saved_artists" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme">
        <ListPreference
            app:defaultValue="Eclectic"
            app:entries="@array/mood_mode_list"
            app:entryValues="@array/mood_mode_values"
            app:key="mood_mode"
            app:title="Pick your mood" />
    </PreferenceCategory>

</PreferenceScreen>
